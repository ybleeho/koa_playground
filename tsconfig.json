{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./build",
    "lib": [ "es5", "es6" ],
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@controller/*": ["controller/*"],
      "@models/*": ["models/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}

